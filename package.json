{
	"name": "open-dir-as-window",
	"displayName": "open-dir-as-window",
	"description": "Adds a context menu item to open a directory as a new editor window",
	"version": "0.0.1",
	"publisher": "robin-duckett",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:open-dir-as-window.execute"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/robinduckett/open-dir-as-window-vscode.git"
	},
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"when": "explorerResourceIsFolder",
				"command": "open-dir-as-window.execute",
				"title": "Open Folder as New Window"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "open-dir-as-window.execute",
					"group": "2_workspace"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.48.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {}
}